{% block sw_condition_base_fields %}
    <sw-field type="select"
              name="operator"
              v-model="condition.value.operator"
              class="field field--select has--arrow">
        <option v-for="(operator, identifier) in operators"
                :value="operator.identifier">
            {{ $tc(operator.label) }}
        </option>
    </sw-field>
    <sw-field id="count"
              type="number"
              step="1"
              class="field field--main"
              v-model="condition.value.count">
    </sw-field>
{% endblock %}
