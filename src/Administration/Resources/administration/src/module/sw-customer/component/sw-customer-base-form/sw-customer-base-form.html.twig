{% block sw_customer_base_form %}
    <div class="sw-customer-base-form">
        <sw-container columns="repeat(auto-fit, minmax(250px, 1fr))"
                      gap="0px 32px">
            <sw-container columns="1fr 1fr" gap="32px">
                {% block sw_customer_base_form_first_salutation_field %}
                    <sw-select-field :label="$tc('sw-customer.baseForm.labelSalutation')"
                                     v-model="customer.salutationId"
                                     :placeholder="$tc('sw-customer.baseForm.placeholderSalutation')"
                                     required
                                     validation="required">
                        <option v-for="salutation in salutations" :key="salutation.id" :value="salutation.id">
                            {{ salutation.translated.displayName }}
                        </option>
                    </sw-select-field>
                {% endblock %}

                {% block sw_customer_base_form_title_field %}
                    <sw-field type="text"
                              :label="$tc('sw-customer.baseForm.labelTitle')"
                              v-model="customer.title">
                    </sw-field>
                {% endblock %}
            </sw-container>

            {% block sw_customer_base_form_first_name_field %}
                <sw-field type="text"
                          required
                          :label="$tc('sw-customer.baseForm.labelFirstName')"
                          v-model="customer.firstName">
                </sw-field>
            {% endblock %}

            {% block sw_customer_base_form_last_name_field %}
                <sw-field type="text"
                          required
                          :label="$tc('sw-customer.baseForm.labelLastName')"
                          v-model="customer.lastName">
                </sw-field>
            {% endblock %}

            {% block sw_customer_base_form_email_field %}
                <sw-field type="text"
                          required
                          :label="$tc('sw-customer.baseForm.labelEmail')"
                          v-model="customer.email">
                </sw-field>
            {% endblock %}

            {% block sw_customer_base_form_customer_group_field %}
                <sw-field type="select"
                          required
                          :label="$tc('sw-customer.baseForm.labelCustomerGroup')"
                          :placeholder="$tc('sw-customer.baseForm.placeholderCustomerGroup')"
                          v-model="customer.groupId">
                    {% block sw_customer_base_form_customer_group_field_options %}
                        <option v-for="customerGroup in customerGroups" :key="customerGroup.id" :value="customerGroup.id">
                            {{ customerGroup.translated.name }}
                        </option>
                    {% endblock %}
                </sw-field>
            {% endblock %}

            {% block sw_customer_base_form_sales_channel_field %}
                <sw-field type="select"
                          required
                          :label="$tc('sw-customer.baseForm.labelSalesChannel')"
                          :placeholder="$tc('sw-customer.baseForm.placeholderSalesChannel')"
                          @change="swCustomerCreateOnChangeSalesChannel"
                          v-model="customer.salesChannelId">
                    {% block sw_customer_base_form_sales_channel_field_options %}
                        <option v-for="salesChannel in salesChannels" :key="salesChannel.id" :value="salesChannel.id">
                            {{ salesChannel.translated.name }}
                        </option>
                    {% endblock %}
                </sw-field>
            {% endblock %}

            {% block sw_customer_base_form_payment_method_field %}
                <sw-field type="select"
                          required
                          :label="$tc('sw-customer.baseForm.labelPaymentMethod')"
                          :placeholder="$tc('sw-customer.baseForm.placeholderPaymentMethod')"
                          v-model="customer.defaultPaymentMethodId">
                    {% block sw_customer_base_form_payment_method_field_options %}
                        <option v-for="paymentMethod in paymentMethods" :key="paymentMethod.id" :value="paymentMethod.id">
                            {{ paymentMethod.translated.name }}
                        </option>
                    {% endblock %}
                </sw-field>
            {% endblock %}

            {% block sw_customer_base_form_customer_number_field %}
                <sw-field type="text"
                          :label="$tc('sw-customer.baseForm.labelCustomerNumber')"
                          v-model="customer.customerNumber">
                </sw-field>
            {% endblock %}

            {% block sw_customer_base_form_birthday_field %}
                <sw-field type="date"
                          :label="$tc('sw-customer.baseForm.labelBirthday')"
                          name="birthday"
                          v-model="customer.birthday">
                </sw-field>
            {% endblock %}
        </sw-container>

        {% block sw_customer_base_form_tag_field %}
            <sw-tag-multi-select :entity="customer"></sw-tag-multi-select >
        {% endblock %}
    </div>
{% endblock %}
