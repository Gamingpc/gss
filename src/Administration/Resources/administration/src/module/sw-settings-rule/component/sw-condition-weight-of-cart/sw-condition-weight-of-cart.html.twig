{% block sw_condition_base_fields %}
    {% block sw_condition_weight_of_cart_field_operator %}
        <sw-condition-operator-select operatorSetName="number"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_weight_of_cart_field_weight %}
        <sw-field type="number"
                  name="weight"
                  :step="0.01"
                  class="field--main"
                  size="medium"
                  v-model="condition.value.weight">
        </sw-field>
    {% endblock %}
{% endblock %}
