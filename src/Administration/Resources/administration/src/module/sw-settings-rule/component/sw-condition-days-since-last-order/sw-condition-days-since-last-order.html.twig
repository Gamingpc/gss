{% block sw_condition_base_fields %}
    {% block sw_condition_days_since_last_order_field_operator %}
        <sw-condition-operator-select operatorSetName="number"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_days_since_last_order_field_days_passed %}
        <sw-field type="number"
                  name="daysPassed"
                  :step="1"
                  class="field--main"
                  v-model="condition.value.daysPassed">
        </sw-field>
    {% endblock %}
{% endblock %}
