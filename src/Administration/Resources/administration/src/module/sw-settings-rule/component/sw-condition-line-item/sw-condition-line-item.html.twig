{% block sw_condition_base_fields %}
    {% block sw_condition_line_item_field_operator %}
        <sw-condition-operator-select operatorSetName="multiStore"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_line_item_field_identifier %}
        <sw-condition-value multi
                            size="small"
                            name="identifiers"
                            :id="condition.id"
                            :store="getProductStore()"
                            class="field--main"
                            v-model="condition.value.identifiers">
        </sw-condition-value>
    {% endblock %}
{% endblock %}
