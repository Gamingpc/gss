{% block sw_condition_base_fields %}
    {% block sw_condition_goods_price_field_operator %}
        <sw-condition-operator-select operatorSetName="number"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_goods_price_field_amount %}
        <sw-field type="number"
                  name="amount"
                  :step=0.01
                  class="field--main"
                  size="medium"
                  v-model="condition.value.amount">
        </sw-field>
    {% endblock %}
{% endblock %}

{% block sw_condition_base_field_before_actions %}
    <div class="sw-condition-goods-price__filter field--actions">
        <sw-button @click="showFilterModal = true"
                   v-tooltip="{ message: $tc('sw-settings-rule.conditionFilter.infoText') }">
            <sw-icon name="small-default-stack-filter" color="#607182"></sw-icon>
        </sw-button>
    </div>
{% endblock %}

{% block sw_condition_base_before_container %}
    <sw-condition-modal v-if="showFilterModal"
                        @modal-close="showFilterModal = false"
                        :condition="condition">
    </sw-condition-modal>
{% endblock %}
