{% block sw_condition_base_fields %}
    {% block sw_condition_billing_customer_number_field_operator %}
        <sw-condition-operator-select operatorSetName="multiStore"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_billing_customer_number_field_numbers %}
        <sw-tagged-field class="field--main"
                         name="numbers"
                         :placeholder="$tc('global.sw-condition.tag.placeholder')"
                         v-model="condition.value.numbers">
        </sw-tagged-field>
    {% endblock %}
{% endblock %}
