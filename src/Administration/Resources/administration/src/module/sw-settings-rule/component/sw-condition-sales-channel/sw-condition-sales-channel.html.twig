{% block sw_condition_base_fields %}
    {% block sw_condition_sales_channel_field_operator %}
        <sw-condition-operator-select operatorSetName="multiStore"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_sales_channel_field_sales_channel_ids %}
        <sw-condition-value multi
                            size="small"
                            name="salesChannelIds"
                            :id="condition.id"
                            :store="getSalesChannelStore()"
                            class="field--main"
                            v-model="condition.value.salesChannelIds">
        </sw-condition-value>
    {% endblock %}
{% endblock %}
