{% block sw_condition_base_fields %}
    {% block sw_condition_line_item_with_quantity_field_product %}
        <sw-select :store="getProductStore()"
                   name="id"
                   :id="condition.id"
                   required
                   class="field--main has--arrow"
                   v-model="condition.value.id">
        </sw-select>
    {% endblock %}
    {% block sw_condition_line_item_with_quantity_field_operator %}
        <sw-condition-operator-select operatorSetName="number"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_line_item_with_quantity_field_quantity %}
        <sw-field type="number"
                  name="quantity"
                  :step="1"
                  class="field--main"
                  size="medium"
                  v-model="condition.value.quantity">
        </sw-field>
    {% endblock %}
{% endblock %}
