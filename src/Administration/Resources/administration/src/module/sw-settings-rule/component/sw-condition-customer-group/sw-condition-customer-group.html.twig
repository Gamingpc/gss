{% block sw_condition_base_fields %}
    {% block sw_condition_customer_group_field_operator %}
        <sw-condition-operator-select operatorSetName="multiStore"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_customer_group_field_customer_group_ids %}
        <sw-condition-value multi
                            size="small"
                            name="customerGroupIds"
                            :id="condition.id"
                            :store="getCustomerGroupStore()"
                            class="field--main"
                            v-model="condition.value.customerGroupIds">
        </sw-condition-value>
    {% endblock %}
{% endblock %}
