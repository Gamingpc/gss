{% block sw_condition_base_fields %}
    {% block sw_condition_billing_country_field_operator %}
        <sw-condition-operator-select operatorSetName="multiStore"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_billing_country_field_country_ids %}
        <sw-condition-value multi
                            size="small"
                            :id="condition.id"
                            name="countryIds"
                            :store="getCountryStore()"
                            class="field--main"
                            v-model="condition.value.countryIds">
        </sw-condition-value>
    {% endblock %}
{% endblock %}
