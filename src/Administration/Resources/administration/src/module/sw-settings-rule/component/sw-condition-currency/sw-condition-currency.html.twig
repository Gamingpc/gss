{% block sw_condition_base_fields %}
    {% block sw_condition_currency_field_operator %}
        <sw-condition-operator-select operatorSetName="multiStore"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_currency_field_currency_ids %}
        <sw-condition-value :id="condition.id"
                            multi
                            size="small"
                            name="currencyIds"
                            :store="getCurrencyStore()"
                            class="field--main"
                            v-model="condition.value.currencyIds">
        </sw-condition-value>
    {% endblock %}
{% endblock %}
