{% block sw_condition_base_fields %}
    {% block sw_condition_line_item_unit_price_field_operator %}
        <sw-condition-operator-select operatorSetName="number"
                                      v-model="condition.value.operator">
        </sw-condition-operator-select>
    {% endblock %}
    {% block sw_condition_line_item_unit_price_field_amount %}
        <sw-field type="number"
                  name="amount"
                  :step="0.01"
                  class="field--main"
                  size="medium"
                  v-model="condition.value.amount">
        </sw-field>
    {% endblock %}
{% endblock %}
