<sw-base-field class="sw-field--radio" v-bind="$attrs" :name="formFieldName" :error="$attrs.error || actualError">
    <template #sw-field-input="{ identification, helpText, error, disabled }">
        <sw-help-text v-if="helpText" :text="helpText"></sw-help-text>
            <div class="sw-field__radio-group">
                <div class="sw-field__radio-option" v-for="(option, index) in options">
                    <div class="sw-field__radio-input">
                        <input type="radio"
                               :name="`${identification}-${index}`"
                               :id="`${identification}-${index}`"
                               :value="option.value"
                               :disabled="disabled"
                               :checked="currentValue === option.value ? 'checked' : false"
                               @change="onChange" />
                        <div class="sw-field__radio-state"></div>
                    </div>

                    <label :for="`${identification}-${index}`">{{ option.name }}</label>
                </div>
            </div>
    </template>
</sw-base-field>