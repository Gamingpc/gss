{% block sw_price_field %}
    <div class="sw-price-field" :class="{
        'sw-price-field--label': label,
        'sw-price-field--compact': compact,
    }">

        {% block sw_price_field_gross %}
            <sw-field type="number"
                      :label="label ? $tc('global.sw-price-field.labelPriceGross') : false"
                      :validation="validation"
                      :size="compact ? 'small' : 'default'"
                      :min="0"
                      :digits="currency.decimalPrecision"
                      :errorPointer="grossPointer"
                      @input-change="onPriceGrossChange"
                      v-bind="$attrs"
                      v-model="price.gross">
                <template #suffix>
                    {{ currency.symbol }}
                </template>
            </sw-field>
        {% endblock %}

        {% block sw_price_field_lock_button %}
            <button class="sw-price-field__lock" :class="{ 'is--locked': price.linked }" @click="onLockSwitch">
                <sw-icon v-if="price.linked" key="price-field-locked-indicator" name="default-lock-closed" size="16" ></sw-icon>
                <sw-icon v-else key="price-field-locked-indicator" name="default-lock-open" size="16"></sw-icon>
            </button>
        {% endblock %}

        {% block sw_price_field_net %}
            <sw-field type="number"
                      :label="label ? $tc('global.sw-price-field.labelPriceNet') : false"
                      :validation="validation"
                      :size="compact ? 'small' : 'default'"
                      :min="0"
                      @input-change="onPriceNetChange"
                      :digits="currency.decimalPrecision"
                      :errorPointer="netPointer"
                      v-bind="$attrs"
                      v-model="price.net">
                <template #suffix>
                    {{ currency.symbol }}
                </template>
            </sw-field>
        {% endblock %}
    </div>
{% endblock %}
