<sw-block-field class="sw-field--textarea" v-bind="$attrs" :name="formFieldName" :error="$attrs.error || actualError">
    <template #sw-field-input="{identification, helpText, error, disabled, setFocusClass, removeFocusClass }">
        <textarea :id="identification"
                  :name="identification"
                  :placeholder="placeholder"
                  :disabled="disabled"
                  :value="currentValue"
                  @change="onChange"
                  @input="onInput"
                  @focus="setFocusClass"
                  @blur="removeFocusClass">
        </textarea>
    </template>
</sw-block-field>