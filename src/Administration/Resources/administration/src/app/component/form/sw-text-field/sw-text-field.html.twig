<sw-contextual-field class="sw-field--text"
                     v-bind="$attrs"
                     :name="formFieldName"
                     :isInheritanceField="isInheritanceField"
                     :isInherited="isInherited"
                     :error="$attrs.error || actualError"
                     @inheritance-restore="restoreInheritance">
    <template v-if="hasPrefix" #sw-contextual-field-prefix="{ disabled, identification }">
        <slot name="prefix" v-bind="{disabled, identification}"></slot>
    </template>

    <template #sw-field-input="{ identification, error, disabled, swBlockSize, setFocusClass, removeFocusClass, hasSuffix, hasPrefix }">
        <input type="text"
               :name="identification"
               :id="identification"
               :disabled="disabled"
               :value="currentValue"
               :placeHolder="placeholder || inheritedValue"
               @input="onInput"
               @change="onChange"
               @focus="setFocusClass"
               @blur="removeFocusClass"
               v-on="additionalListeners">
    </template>

    <template v-if="copyable || hasSuffix" #sw-contextual-field-suffix="{disabled, identification}">
        <slot name="suffix" v-bind="{ identification }"></slot>
        <sw-field-copyable
            v-if="copyable"
           :displayName="identification"
           :copyableText="currentValue"
           :tooltip="copyableTooltip">
        </sw-field-copyable>
    </template>
</sw-contextual-field>
