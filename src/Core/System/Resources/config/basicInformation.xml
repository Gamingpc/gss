<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Basic Information</title>
        <title lang="de-DE">Stammdaten</title>

        <input-field>
            <name>email</name>
            <label>Shopowner email address</label>
            <label lang="de-DE">Shopbetreiber E-Mail-Adresse</label>
            <placeholder>Enter email</placeholder>
            <placeholder lang="de-DE">Gebe eine E-Mail ein</placeholder>
        </input-field>

        <input-field type="textarea">
            <name>address</name>
            <label>Address</label>
            <label lang="de-DE">Adresse</label>
            <placeholder>Enter address</placeholder>
            <placeholder lang="de-DE">Adresse eingeben</placeholder>
        </input-field>

        <input-field type="textarea">
            <name>bankAccount</name>
            <label>Bank account </label>
            <label lang="de-DE">Bankverbindung</label>
            <placeholder>Enter bank account</placeholder>
            <placeholder lang="de-DE">Bankverbindung eingeben</placeholder>
        </input-field>

        <input-field type="bool">
            <name>familyFriendly</name>
            <label>Shop is family friendly</label>
            <label lang="de-DE">Shop ist Familienfreundlich</label>
            <helpText>Will set the meta tag "isFamilyFriendly" for search engines</helpText>
            <helpText lang="de-DE">Setzt den Metatag "isFamiliyFriendly" fÃ¼r Suchmaschinen</helpText>
        </input-field>
    </card>
</config>