{% sw_extends '@Framework/documents/base.html.twig' %}

{% block document_title_tag %}{% trans with {'%stornoNumber%': order.id} %}document.stornoHeadline{% endtrans %}{% endblock %}

{% block document_headline %}
    <h1>{% trans with {'%stornoNumber%': config.custom.stornoNumber, '%invoiceNumber%': config.custom.invoiceNumber} %}document.stornoHeadline{% endtrans %}</h1>
{% endblock %}

 {% block document_side_info %}
     <table>
         <tr><td>{% trans with {'%customerNumber%': customer.customerNumber} %}document.customerNumber{% endtrans %}</td></tr>
         <tr><td>{% trans with {'%stornoNumber%': config.custom.stornoNumber | truncate(10)} %}document.stornoNumber{% endtrans %}</td></tr>
         <tr><td>{% trans with {'%orderNumber%': order.orderNumber | truncate(10)} %}document.orderNumber{% endtrans %}</td></tr>
         <tr><td>{% trans with {'%orderDate%': order.date|localizeddate('medium', 'none', order.saleschannel.language.locale.code)} %}document.orderDate{% endtrans %}</td></tr>
         <tr><td>{% trans with {'%date%': order.date|localizeddate('medium', 'none', order.saleschannel.language.locale.code)} %}document.date{% endtrans %}</td></tr>
     </table><br/>
 {% endblock %}
