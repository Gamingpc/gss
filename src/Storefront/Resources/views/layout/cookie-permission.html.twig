{% block layout_cookie_permission_inner %}
    <div class="cookie-permission-container"
         data-cookie-permission="true">
        <div class="container">
            <div class="row align-items-center">
                {% block layout_cookie_permission_inner_content %}
                    <div class="col cookie-permission-content">
                        {#TODO: NEXT-2667 - add shop page link to cookie message#}
                        {{ "cookie.message"|trans|raw }}
                    </div>
                {% endblock %}

                {% block layout_cookie_permission_inner_button %}
                    <div class="col-12 col-md-auto cookie-permission-button js-cookie-permission-button">
                        <button type="submit"
                                class="btn btn-primary">
                            {{ "cookie.accept"|trans|raw }}
                        </button>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
