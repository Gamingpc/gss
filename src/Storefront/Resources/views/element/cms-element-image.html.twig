{% block element_image %}
    <div class="cms-element-{{ element.type }}">
        {% block element_image_inner %}
            {% set imageElement %}
                {% block element_image_container %}
                    {% if element.data.media.url %}
                        <div class="cms-image-container is-{{ element.config.displayMode.value }}"{% if element.config.minHeight.value %} style="min-height: {{ element.config.minHeight.value }};"{% endif %}>
                            {% block element_image_media %}
                                <img class="cms-image"
                                     src="{{ element.data.media.url }}"
                                     alt="{{ element.data.media.alt }}">
                            {% endblock %}
                        </div>
                    {% endif %}
                {% endblock %}
            {% endset %}

            {% if element.config.url.value %}
                <a href="{{ element.config.url.value }}"
                   class="cms-image-link"
                   {% if element.config.newTab.value %}target="_blank"{% endif %}>
                    {{ imageElement }}
                </a>
            {% else %}
                {{ imageElement }}
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}
